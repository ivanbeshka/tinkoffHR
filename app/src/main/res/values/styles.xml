<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextInputLayoutCreateReview" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/til_create_review_hint</item>
        <item name="android:textColorHint">@color/til_create_review_hint</item>
        <item name="hintTextColor">@color/til_create_review_hint</item>
    </style>

    <style name="TextInputLayoutRegister" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="BtnRegister" parent="TextAppearance.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/register_button_background</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RightToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetLeft">0dp</item>
    </style>

    <style name="MyDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="background">@color/transparent</item>
    </style>
</resources>